<script>
  function showSection(id) {
    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
    document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
    document.getElementById(id).classList.add('active');
    event.target.classList.add('active');
    window.scrollTo({ top: 0, behavior: 'smooth' });
    if (id === 'schedule') buildWeekGrid();
  }

  function showStyle(type) {
    document.querySelectorAll('.style-content').forEach(s => s.classList.remove('active'));
    document.querySelectorAll('.style-tab').forEach(t => t.classList.remove('active'));
    document.getElementById('style-' + type).classList.add('active');
    event.target.classList.add('active');
  }

  function showProtein(type) {
    document.querySelectorAll('.protein-content').forEach(s => s.classList.remove('active'));
    document.querySelectorAll('.protein-tab').forEach(t => t.classList.remove('active'));
    document.getElementById('protein-' + type).classList.add('active');
    event.target.classList.add('active');
  }

  // ── WEEK GRID ──────────────────────────────────────────────
  const DAYS = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
  const MONTHS = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];

  // Default schedule per weekday (0=Sun … 6=Sat)
  const daySchedule = {
    0: [ // Sunday — WASH DAY
      { text: 'PRE-POO NIGHT BEFORE', cls: 'wash-day' },
      { text: '→ Wash Routine (7-step)', cls: 'wash-day' },
      { text: '→ Deep Condition', cls: 'wash-day' },
      { text: '→ Style', cls: 'wash-day' },
      { text: 'Scalp Massage', cls: 'massage' },
      { text: 'Morning shake + supps', cls: '' },
    ],
    1: [ // Monday
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Scalp Massage', cls: 'massage' },
      { text: 'Satin bonnet tonight', cls: '' },
    ],
    2: [ // Tuesday
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Hydration check (64oz+)', cls: 'highlight' },
    ],
    3: [ // Wednesday
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Scalp Massage', cls: 'massage' },
      { text: 'Mid-week moisture refresh', cls: 'highlight' },
    ],
    4: [ // Thursday
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Scalp Massage', cls: 'massage' },
    ],
    5: [ // Friday
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Hydration check (64oz+)', cls: 'highlight' },
    ],
    6: [ // Saturday — Pre-poo night before wash
      { text: 'Apply Chebe Pre-Poo TONIGHT', cls: 'wash-day' },
      { text: 'Morning shake + supps', cls: '' },
      { text: 'Scalp Massage', cls: 'massage' },
    ],
  };

  function buildWeekGrid() {
    const grid = document.getElementById('week-grid');
    if (!grid) return;
    grid.innerHTML = '';
    const today = new Date();
    // Go to Sunday of this week
    const sunday = new Date(today);
    sunday.setDate(today.getDate() - today.getDay());

    document.getElementById('week-display').textContent =
      'Week of ' + MONTHS[sunday.getMonth()] + ' ' + sunday.getDate();

    for (let i = 0; i < 7; i++) {
      const d = new Date(sunday);
      d.setDate(sunday.getDate() + i);
      const isToday = d.toDateString() === today.toDateString();
      const tasks = daySchedule[i] || [];

      const card = document.createElement('div');
      card.className = 'day-card' + (isToday ? ' today' : '');

      const hdr = document.createElement('div');
      hdr.className = 'day-header';
      hdr.innerHTML = `<div class="day-name">${DAYS[i]}${isToday ? ' · TODAY' : ''}</div><div class="day-date">${d.getDate()}</div>`;
      card.appendChild(hdr);

      tasks.forEach(t => {
        const row = document.createElement('div');
        row.className = 'day-task ' + (t.cls || '');
        row.textContent = t.text;
        card.appendChild(row);
      });

      grid.appendChild(card);
    }
  }

  // ── PROTEIN WEEK TRACKER ───────────────────────────────────
  function markWeek(n) {
    [1,2,3,4].forEach(i => {
      const el = document.getElementById('w' + i + '-check');
      if (el) { el.textContent = i === n ? '✓' : '◯'; el.style.opacity = i === n ? '1' : '0.3'; }
    });
  }

  // ── RESET CHECKBOXES ──────────────────────────────────────
  function resetChecks() {
    document.querySelectorAll('#schedule input[type="checkbox"]').forEach(cb => cb.checked = false);
  }

  // ── ICS EXPORT ────────────────────────────────────────────
  function pad(n) { return String(n).padStart(2,'0'); }
  function icsDate(d) {
    return d.getFullYear() + pad(d.getMonth()+1) + pad(d.getDate()) +
           'T' + pad(d.getHours()) + pad(d.getMinutes()) + '00';
  }

  function makeEvent(uid, summary, description, dtstart, dtend, rrule) {
    return [
      'BEGIN:VEVENT',
      'UID:' + uid + '@hairprotocol',
      'SUMMARY:' + summary,
      'DESCRIPTION:' + description.replace(/\n/g,'\\n'),
      'DTSTART:' + dtstart,
      'DTEND:' + dtend,
      rrule ? 'RRULE:' + rrule : '',
      'END:VEVENT'
    ].filter(Boolean).join('\r\n');
  }

  function exportICS() {
    const now = new Date();
    // Next Sunday for wash day
    const nextSun = new Date(now);
    nextSun.setDate(now.getDate() + (7 - now.getDay()) % 7 || 7);

    // Next Saturday for pre-poo
    const nextSat = new Date(nextSun);
    nextSat.setDate(nextSun.getDate() - 1);

    const events = [
      // Morning supplements — daily 8am
      (function() {
        const d = new Date(now); d.setHours(8,0,0,0);
        const e = new Date(d); e.setMinutes(30);
        return makeEvent('morning-supps','💊 Morning Shake + Supplements',
          'Vitamin shake: Collagen + MaryRuth + Biotin drops + MSM\\nLiquid IV packet (full)\\nPhyto Phanere 2 caps (with meal)',
          icsDate(d), icsDate(e), 'FREQ=DAILY');
      })(),

      // Midday supplements — daily 12pm
      (function() {
        const d = new Date(now); d.setHours(12,0,0,0);
        const e = new Date(d); e.setMinutes(15);
        return makeEvent('midday-supps','☀️ Midday Supplements',
          'Omega-3 2 softgels\\nD3+K2 1 cap (with fat in meal)\\nSaw Palmetto 320mg',
          icsDate(d), icsDate(e), 'FREQ=DAILY');
      })(),

      // Evening supplements — daily 8pm
      (function() {
        const d = new Date(now); d.setHours(20,0,0,0);
        const e = new Date(d); e.setMinutes(15);
        return makeEvent('evening-supps','🌙 Evening Supplements',
          'Zinc Picolinate 25–30mg\\nMagnesium Glycinate 400mg\\nL-Theanine 200mg\\nSatin bonnet on',
          icsDate(d), icsDate(e), 'FREQ=DAILY');
      })(),

      // Scalp massage — Mon/Wed/Thu/Sat
      (function() {
        const d = new Date(now); d.setHours(19,0,0,0);
        const e = new Date(d); e.setMinutes(10);
        return makeEvent('scalp-massage','💆 Scalp Massage (Bhringraj Oil)',
          '4–5 minutes minimum. Bhringraj oil. Counteracts Adderall vasoconstriction.',
          icsDate(d), icsDate(e), 'FREQ=WEEKLY;BYDAY=MO,WE,TH,SA');
      })(),

      // Pre-poo Saturday night
      (function() {
        const d = new Date(nextSat); d.setHours(21,0,0,0);
        const e = new Date(d); e.setMinutes(30);
        return makeEvent('prepoo','🫒 Apply Chebe Pre-Poo (Wash Day Prep)',
          'Apply Chebe Penetrating Overnight Butter to dry hair\\nCover with plastic cap + satin bonnet\\nLeave overnight (24 hrs)',
          icsDate(d), icsDate(e), 'FREQ=WEEKLY;BYDAY=SA');
      })(),

      // Wash day — weekly Sunday
      (function() {
        const d = new Date(nextSun); d.setHours(10,0,0,0);
        const e = new Date(d); e.setHours(13,0,0);
        return makeEvent('washday','🚿 WASH DAY — 7-Step Protocol',
          '1. Remove pre-poo\\n2. Hot oil treatment\\n3. Co-wash OR clarifying wash\\n4. Mizani Fiberfyl (bond building)\\n5. Deep condition 20-30min under dryer\\n6. ACV rinse + cool water seal\\n7. Leave-in + style\\n\\nProtein rotation: check your current week!',
          icsDate(d), icsDate(e), 'FREQ=WEEKLY;BYDAY=SU');
      })(),

      // Mid-week moisture refresh — Wednesday
      (function() {
        const d = new Date(now); d.setHours(18,0,0,0);
        const e = new Date(d); e.setMinutes(30);
        return makeEvent('moisture-refresh','💧 Mid-Week Moisture Refresh',
          'Light co-wash or water + leave-in refresh\\nKeracare Silken Seal Liquid Sheen\\nRe-twist or re-style as needed',
          icsDate(d), icsDate(e), 'FREQ=WEEKLY;BYDAY=WE');
      })(),

      // Monthly length check — first Sunday of month
      (function() {
        const d = new Date(nextSun); d.setHours(9,0,0,0);
        const e = new Date(d); e.setMinutes(30);
        return makeEvent('length-check','📏 Monthly Length Check + Trim',
          'Measure hair length, take photo\\nStrand-by-strand split end trim\\nNizoral wash\\nNote any changes in density or shedding\\nREMINDER: Stop biotin 72hrs before any upcoming labs!',
          icsDate(d), icsDate(e), 'FREQ=MONTHLY;BYDAY=1SU');
      })(),
    ];

    const ics = [
      'BEGIN:VCALENDAR',
      'VERSION:2.0',
      'PRODID:-//Hair Growth Protocol//EN',
      'CALSCALE:GREGORIAN',
      'X-WR-CALNAME:💇 Hair Growth Protocol',
      'X-WR-TIMEZONE:America/New_York',
      ...events,
      'END:VCALENDAR'
    ].join('\r\n');

    const blob = new Blob([ics], { type: 'text/calendar;charset=utf-8' });
    const a = document.createElement('a');
    a.href = URL.createObjectURL(blob);
    a.download = 'hair_growth_protocol.ics';
    a.click();
  }
</script>
